@import 'nib'

body, html
	width 100%
	height 100%

#game-container
	width 30%
	min-height 400px
	min-width 400px
	margin auto
	display inline-block

.game-cell
	position relative
	width @css{calc(33% - 8px)}
	border solid 1px #000
	display inline-block
	margin 3px
	&.disabled
		background rgba(0,0,0,0.2)
	&:before
		content ""
		display block
		padding-top 100% 	/* initial ratio of 1:1*/
	&:hover
		box-shadow 0 0 15px #F44
	&.cell-filled
		box-shadow 0 0 15px #0F0E0E

.game-field
	width @css{calc(33% - 15px)}
	position relative
	display inline-block
	padding 1px
	margin-top 15px
	margin-right 10px
	&.current-field
		box-shadow  0 0 15px #35E726		
		& .game-cell:hover
			box-shadow 0 0 15px #44FF8F
	&:before
		content: ""
		display: block
	&.winner-cross-field
		& div.game-cell
			box-shadow 0 0 15px #0A00FF
	&.winner-zero-field
		& div.game-cell
			box-shadow 0 0 15px #F44


.zero-cell
	border 4px solid #F44
	position absolute
	top @css{calc(4%)}
	left @css{calc(3%)}
	border-radius @css{calc(100%)}
	width @css{calc(83% - 4px)}
	height @css{calc(83% - 4px)}

.cross-cell
	width @css{calc(100%)}
	height 5px
	position absolute
	top calc(44%)
	left 0px
	background #0A00FF
	transform rotate(-45deg)
	&:after
		content ''
		width @css{calc(100%)}
		height @css{calc(100%)}
		background #0A00FF
		position absolute
		top 0px
		left 0px
		transform rotate(90deg)

#local-game-switch-container
	width @css{calc(20%)}
	height @css{calc(100%)}
	display inline-block
	position absolute
	top 0px
	#switch-button
		cursor pointer
		width @css{calc(50%)}
		height @css{calc(5%)}
		font-size @css{calc(100%)}
		color white
		text-align center
		border-radius 14px
		position relative
		top 27px
		margin auto
		background #1A42FF
		&:before
			content 'Local '

		&.network-game
			background #28A140
			&:before
				content 'Network '