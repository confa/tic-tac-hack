@import 'nib'

body, html
	width 100%
	height 100%

#game-container
	width 60%
	height 100%
	min-height 400px
	min-width 400px
	margin auto

.game-cell
	position relative
	width @css{calc(33% - 8px)}
	border solid 1px #000
	display inline-block
	margin 3px
	&.disabled
		background rgba(0,0,0,0.2)
	&:before
		content ""
		display block
		padding-top 100% 	/* initial ratio of 1:1*/

.game-field
	width @css{calc(33% - 15px)}
	position relative
	display inline-block
	padding 1px
	margin-top 15px
	margin-right 10px

	&.current-field
		box-shadow  0 0 15px #35E726
	&:before
		content: ""
		display: block

.zero-field
	position absolute
	border-radius 98px
	border 10px solid #f44
	width 156px
	height 156px
	margin 8px 0px 0px 4px

.cross-field
	position absolute
	width 219px
	height 14px
	background #0A00FF
	margin 95px 0 0 -17px
	transform rotate(-45deg)
	&:after
		content ''
		width 219px
		height 14px
		background #0A00FF
		position absolute
		top 0px
		left 0px
		transform rotate(90deg)	

.zero-cell
	border 4px solid #f44
	position absolute
	top @css{calc(4%)}
	left @css{calc(3%)}
	border-radius @css{calc(100%)}
	width @css{calc(83% - 4px)}
	height @css{calc(83% - 4px)}

.cross-cell
	width @css{calc(100%)}
	height 5px
	position absolute
	top calc(44%)
	left 0px
	background #0A00FF
	transform rotate(-45deg)
	&:after
		content ''
		width @css{calc(100%)}
		height @css{calc(100%)}
		background #0A00FF
		position absolute
		top 0px
		left 0px
		transform rotate(90deg)