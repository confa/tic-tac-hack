@import 'nib'

width = 500px
height = 500px

body, html
	width 100%
	height 100%

#game-container
	width 30%
	height 80%
	margin auto

.game-cell
	width @css{calc(33% - 10px)}
	height @css{calc(33% - 10px)}
	border solid 1px #000
	display inline-block
	margin 3px
	&.disabled
		background rgba(0,0,0,0.2)

.game-field
	width @css{calc(33% - 12px)}
	height @css{calc(33% - 17px)}
	display inline-block
	padding 1px
	margin-top 15px
	margin-right 10px

	&.current-field
		box-shadow  0 0 15px #35E726


.zero-field
	position absolute
	border-radius 98px
	border 10px solid #f44
	width 156px
	height 156px
	margin 8px 0px 0px 4px

.cross-field
	position absolute
	width 219px
	height 14px
	background #0A00FF
	margin 95px 0 0 -17px
	transform rotate(-45deg)
	&:after
		content ''
		width 219px
		height 14px
		background #0A00FF
		position absolute
		top 0px
		left 0px
		transform rotate(90deg)	

.zero-cell
	border-radius 50px
	border 4px solid #f44
	width 36px
	height 36px
	margin 5px

.cross-cell
	width 48px
	height 4px
	background #0A00FF
	margin 24px 0 0 4px
	transform rotate(-45deg)
	&:after
		content ''
		width 48px
		height 4px
		background #0A00FF
		position absolute
		top 0px
		left 0px
		transform rotate(90deg)